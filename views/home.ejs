                    </div>
                </section>
            </div>
            <div class="column">
                <section class="jumbotron text-center">
                    <div class="container">
                        <h1 class="jumbotron-heading">MARK ATTENDANCE </h1>

                        <p>
                            <a href="/attendance" class="btn btn-primary my-2">POST ATTENDANCE</a>
                            <a href="/absent" class="btn btn-secondary my-2">SHOW ABSENTES</a>

                        </p>
                    </div>
                </section>
            </div>


            <div class="column">
                <section class="jumbotron text-center">
                    <div class="container">
                        <h1 class="jumbotron-heading">ADD STUDENT SYSTEM</h1>

                        <p>
                            <a href="/addstudent" class="btn btn-primary my-2">ADD</a>
                            <a href="/showstudent" class="btn btn-secondary my-2">SHOW STUDENTS</a>
                        </p>
                    </div>
                </section>
            </div>


            <div class="column">
                <section class="jumbotron text-center">
                    <div class="container">
                        <h1 class="jumbotron-heading">ADD ROOM SYSTEM</h1>

                        <p>
                            <a href="/addroom" class="btn btn-primary my-2">ADD </a>
                            <a href="/showrooms" class="btn btn-secondary my-2">SHOW ROOMS</a>
                        </p>
                    </div>
                </section>
            </div>
        </div>
        </a>
