<% include ./partials/header %>
<style>
    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: 0 auto;
      }
      .form-signin .checkbox {
        font-weight: 400;
      }
      .form-signin .form-control {
        position: relative;
        box-sizing: border-box;
        height: auto;
        padding: 10px;
        font-size: 16px;
      }
      .form-signin .form-control:focus {
        z-index: 2;
      }
      .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
      }
      .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
      }
      </style>

<body class="text-center">
    <link href="https://getbootstrap.com/docs/4.2/examples/album/album.css" rel="stylesheet">
    <main role="main">
        <% if (!currentUser) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            Welcome to <strong> Hostel Management System</strong> check readme for more information
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form class="form-signin" method="post" action="/login">
            <img class="mb-4" src="images/prayer-beads.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="text" class="form-control" name="username" placeholder="Username" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password"
                required>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Sign in</button>
            <hr>
            <p>Not a user? click here</p>
            <a href="/register" class="btn btn-secondary my-2">Signup</a>

        </form>
        <% }else if (currentUser.isAdmin) { %>

        <div class="row">
            <div class="column">
                <section class="jumbotron text-center">
                    <div class="container">
                        <h1 class="jumbotron-heading">KITCHEN SYSTEM</h1>
                        <p>
                            <a href="/list" class="btn btn-primary my-2">LIST</a>
